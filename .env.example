# Legal RAG API Configuration
# Copy this file to .env and modify as needed

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Model Settings
EMBEDDING_MODEL=jhgan/ko-sroberta-multitask
TFIDF_MAX_FEATURES=10000

# Cache Settings
CACHE_DIR=cache
ENABLE_CACHE=true

# Search Settings  
DEFAULT_TOP_K=5
MAX_TOP_K=100
MIN_SIMILARITY_SCORE=0.1

# Performance Settings
# MAX_WORKERS=  # Leave empty to use all CPU cores
BATCH_SIZE=32

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=legal_rag.log
